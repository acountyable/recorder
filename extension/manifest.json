{
  "manifest_version": 3,
  "name": "Recorder Sync Extension",
  "version": "1.0.0",
  "description": "Syncs Chrome DevTools Recorder recordings with GitHub repository.",
  "permissions": [
    "devtools",
    "storage",
    "scripting"
  ],
  "devtools_page": "devtools.html",
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Recorder Sync"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
